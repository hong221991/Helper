<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <ImageView
    android:id="@+id/cv_text_left_head"
    android:layout_marginStart="10dp"
    android:layout_width="@dimen/item_head_length"
    android:layout_height="@dimen/item_head_length" />
  <com.github.library.bubbleview.BubbleTextView
    android:maxWidth="200dp"
    android:layout_marginStart="55dp"
    android:id="@+id/tv_text_left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textColor="@android:color/white"
    app:arrowWidth="8dp"
    app:angle="8dp"
    android:autoLink="all"
    android:textColorLink="#7accf9"
    app:arrowHeight="10dp"
    app:arrowPosition="14dp"
    app:arrowLocation="left"
    app:bubbleColor="@color/colorPrimary"/>


</FrameLayout>